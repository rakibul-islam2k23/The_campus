<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_6sdp"
        android:elevation="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            >
            <ImageView
                android:id="@+id/circularImage"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/splash_logo"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/circularImage"
                android:layout_marginStart="@dimen/_5sdp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NGPI Campus"
                        android:textColor="@color/black"
                        android:fontFamily="@font/bold"
                        android:textSize="@dimen/_11sdp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10h"
                        android:textColor="#80000000"
                        android:fontFamily="@font/regular"
                        android:textSize="@dimen/_9sdp"
                        />

                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/postTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📛নিউজ📛
প্রথম বারের মতো যাত্রীবাহী ট্রেন রিজার্ভ করে পাবনার রুপপুরে শিক্ষা সফরে বাংলাদেশ পলিটেকনিক ইনস্টটিউট নরসিংদী এর শিক্ষার্থীরা। আজ ২৮ অক্টবোর ২০২৪, সোমবার রাজশাহী রেলওয়ে স্টেশন থেকে যাত্রা শুরু করে পাবনার রূপপুর রেলওয়ে স্টেশনে পৌঁছায় শিক্ষার্থীরা।"
                android:layout_below="@+id/circularImage"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:lineSpacingExtra="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textAlignment="textStart"
                android:fontFamily="@font/medium"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>